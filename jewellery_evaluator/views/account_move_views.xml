<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Extend invoice line views to expose unified Karat and Weight columns.
        Source fields remain on the model for pricing/report logic, while the UI
        shows only the consolidated columns requested by business users.
    -->

    <!-- Invoice line tree (list) view: add unified Karat and Weight columns. -->
    <record id="view_move_line_tree_jewellery_evaluator" model="ir.ui.view">
        <field name="name">account.move.line.tree.jewellery.evaluator</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="priority" eval="101"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="karat_display" string="Karat" optional="show" readonly="1"/>
                <field name="weight_display_g" string="Weight" optional="show" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Invoice line form view: add unified Karat and Weight fields -->
    <record id="view_move_line_form_jewellery_evaluator" model="ir.ui.view">
        <field name="name">account.move.line.form.jewellery.evaluator</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="karat_display" string="Karat" readonly="1"/>
                <field name="weight_display_g" string="Weight" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Invoice form: add unified Karat and Weight to the invoice line list on the move form.
         In Odoo 17 the form may use an inline tree for invoice_line_ids; this xpath
         adds our columns there so they are visible when editing an invoice. -->
    <record id="view_move_form_jewellery_evaluator" model="ir.ui.view">
        <field name="name">account.move.form.jewellery.evaluator</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                <field name="karat_display" string="Karat" readonly="1"/>
                <field name="weight_display_g" string="Weight" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>

