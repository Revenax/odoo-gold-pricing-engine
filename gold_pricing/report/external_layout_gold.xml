<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Gold invoice layout: same as standard (A5 via report.paperformat). Header hidden here; body styles in report_invoice_gold.xml.
    -->
    <template id="external_layout_gold" inherit_id="web.external_layout_standard" name="Gold external layout (no header, A5)">
        <!-- Set company for layout (invoice report passes o=move; standard layout passes it via web.external_layout) -->
        <xpath expr="//div[contains(@t-attf-class, 'o_company_')]" position="before">
            <t t-set="company" t-value="o and o.company_id or res_company"/>
            <style><![CDATA[
                .header[class*='o_company_'][class*='_layout'] {
                    display: none !important;
                }
            ]]></style>
        </xpath>
    </template>
</odoo>
