<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_gold_pricing" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.gold.pricing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Gold Pricing" data-key="gold_pricing">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Gold Pricing</span>
                                <div class="text-muted">
                                    Configure the API source and pricing rules for gold products.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="gold_api_endpoint"/>
                                <div class="text-muted">
                                    URL endpoint for fetching gold prices from the API
                                </div>
                                <div class="content-group">
                                    <field name="gold_api_endpoint"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="gold_api_cookie"/>
                                <div class="text-muted">
                                    Cookie value for API authentication
                                </div>
                                <div class="content-group">
                                    <field name="gold_api_cookie" widget="password"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="fallback_price"/>
                                <div class="text-muted">
                                    Fallback gold price per gram when API is unavailable
                                </div>
                                <div class="content-group">
                                    <field name="fallback_price"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Markup per Gram</span>
                                <div class="text-muted">
                                    Set per-gram markup based on gold type.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="markup_jewellery_local"/>
                                <div class="text-muted">
                                    Markup per gram for local jewellery
                                </div>
                                <div class="content-group">
                                    <field name="markup_jewellery_local"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="markup_jewellery_foreign"/>
                                <div class="text-muted">
                                    Markup per gram for foreign jewellery
                                </div>
                                <div class="content-group">
                                    <field name="markup_jewellery_foreign"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="markup_bars"/>
                                <div class="text-muted">
                                    Markup per gram for gold bars
                                </div>
                                <div class="content-group">
                                    <field name="markup_bars"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="markup_ingots"/>
                                <div class="text-muted">
                                    Markup per gram for gold ingots
                                </div>
                                <div class="content-group">
                                    <field name="markup_ingots"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="markup_coins"/>
                                <div class="text-muted">
                                    Markup per gram for gold coins
                                </div>
                                <div class="content-group">
                                    <field name="markup_coins"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
